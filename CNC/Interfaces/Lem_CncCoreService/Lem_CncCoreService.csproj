  <ItemGroup>
    <None Include="Lem_CncCoreService.nh.cfg.xml" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Lem_CncCoreService.dll.log4net" CopyToOutputDirectory="Always" />
