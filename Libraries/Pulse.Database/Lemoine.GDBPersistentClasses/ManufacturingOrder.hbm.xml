<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  namespace="Lemoine.GDBPersistentClasses"
  assembly="Pulse.Database">
  <class name="ManufacturingOrder" table="manuforder">
    <id name="Id" column="manuforderid"
        access="nosetter.camelcase-m-underscore">
      <generator class="assigned" /><!-- For the moment -->
    </id>
    <version name="Version" column="manuforderversion"
             access="nosetter.camelcase-m-underscore" />
    <property name="Display" column="manuforderdisplay"
              update="false" insert="false" generated="always" />
    <property name="ExternalCode" column="manuforderexternalcode"
              type="Lemoine.NHibernateTypes.CitextEmptyIsNullType, Lemoine.Database" />
    <many-to-one name="Operation" column="operationid"
                 class="Operation"
                 cascade="none"
                 not-found="exception" />
    <many-to-one name="Component" column="componentid"
                 class="Component"
                 cascade="none"
                 not-found="exception" />
    <many-to-one name="WorkOrder" column="workorderid"
                 class="WorkOrder"
                 cascade="none"
                 not-found="exception" />
    <property name="ManufacturingOrderStatus"
              column="manuforderstatusid"
              not-null="true" />
    <property name="Quantity"
              column="manuforderquantity" />
    <property name="SetupDuration"
              type="Lemoine.NHibernateTypes.SecondsAsTimeSpanType, Lemoine.Database"
              column="manufordersetupduration" />
    <property name="CycleDuration"
              type="Lemoine.NHibernateTypes.SecondsAsTimeSpanType, Lemoine.Database"
              column="manufordercycleduration" />
    <property name="DueDateTime"
              column="manuforderduedatetime" />
    <property name="Order"
              column="manuforderorder" />
    <many-to-one name="Machine" column="machineid"
                 class="Machine"
                 cascade="none"
                 not-found="exception" />
  </class>
</hibernate-mapping>
